<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myCatItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#EDF4F4"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowHourHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtView24hourDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"

            android:textColor="#787878"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="8 AM" />

        <TextView
            android:id="@+id/txtViewTempPerHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"
            android:textColor="#787878"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageViewIconPerHour"
            app:layout_constraintEnd_toEndOf="@+id/txtView24hourDay"
            app:layout_constraintStart_toStartOf="@+id/txtView24hourDay"
            app:layout_constraintTop_toBottomOf="@+id/txtView24hourDay"
            tools:text="27 C" />

        <ImageView
            android:id="@+id/imageViewIconPerHour"
            android:layout_width="64dp"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtViewTempPerHour"
            app:layout_constraintStart_toStartOf="@+id/txtViewTempPerHour"
            app:layout_constraintTop_toBottomOf="@+id/txtView24hourDay"
            app:srcCompat="@drawable/baseline_cloud_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>