<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowFavouriteList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F2F6F4F4"
    app:cardCornerRadius="35dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowFavourite"
        android:layout_width="379dp"
        android:layout_height="105dp">


        <TextView
            android:id="@+id/txtViewNameFavouriteList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:maxEms="7"

            android:textColor="#014A44"
            app:layout_constraintEnd_toStartOf="@+id/imgViewDeleteFavorite"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="city" />

        <ImageView
            android:id="@+id/imgViewDeleteFavorite"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginEnd="60dp"

            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/txtViewNameFavouriteList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtViewNameFavouriteList"
            app:layout_constraintVertical_bias="0.419"
            app:srcCompat="@drawable/baseline_delete_24"
            tools:ignore="ImageContrastCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>